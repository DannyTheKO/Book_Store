@model Book_Store.Models.Book;

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a Book</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div> @* for validation user input *@
			<div class="form-group">
				<label asp-for="BookId"></label>
				<input asp-for="BookId" class="form-control"/>
				<span asp-validation-for="BookId" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="CategoryId"></label>
				<input asp-for="CategoryId" class="form-control"/>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="PublisherId"></label>
				<input asp-for="PublisherId" class="form-control"/>
				<span asp-validation-for="PublisherId" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control"/>
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Author"></label>
				<input asp-for="Author" class="form-control"/>
				<span asp-validation-for="Author" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Release"></label>
				<input asp-for="Release" class="form-control"/>
				<span asp-validation-for="Release" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Price"></label>
				<input asp-for="Price" class="form-control"/>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Description"></label>
				<input asp-for="Description" class="form-control"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="Picture"></label>
				<input asp-for="Picture" class="form-control"/>
				<span asp-validation-for="Picture" class="text-danger"></span>
			</div>

			<div class="my-3">
				<a asp-action="Create" class="btn btn-success"> Create </a>
				<a asp-action="Index" class="btn btn-secondary"> Back to list </a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
